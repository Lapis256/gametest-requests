{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "module": "ES2020",
        "declaration": false,
        "noLib": false,
        "lib": ["ES2020", "DOM"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "pretty": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "noImplicitUseStrict": false,
        "outDir": "build/",
        "rootDir": ".",
        "listFiles": false,
        "noEmitHelpers": true
    },
    "exclude": ["node_modules"],
    "compileOnSave": false
}
